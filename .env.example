# Basic configuration for development
NODE_ENV=development
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Feature flags
NEXT_PUBLIC_FF_AUTH_ENABLED=false
NEXT_PUBLIC_FF_SUB_ENABLED=false
NEXT_PUBLIC_FF_MOCK_MODE_ENABLED=false
NEXT_PUBLIC_WEB_SEARCH_ENABLED=false
NEXT_PUBLIC_STRIPE_DONATION_ENABLED=false

# Database (using SQLite for development)
DATABASE_URL=file:./db.sqlite

# Optional API keys (add your own keys)
# OPENAI_API_KEY=your_openai_api_key_here
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here
# GEMINI_API_KEY=your_gemini_api_key_here

# For Pawan API (if using)
# OPENAI_API_BASE_URL=https://api.pawan.krd/v1